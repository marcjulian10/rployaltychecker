{
 "manifest_version": 3,
 "name": "Loft Loyalty Checker",
 "version": "2.2",
 "description": "Scrapes Loft Loyalty fields and generates HTML reports.",
 "permissions": ["activeTab", "scripting", "storage"],
 "action": {
   "default_popup": "popup.html"
 },
 "background": {
   "service_worker": "background.js"
 },
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["content.js"]
   }
 ]
}