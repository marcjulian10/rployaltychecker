{
  "manifest_version": 3,
  "name": "Loft Loyalty Checker",
  "version": "2.1",
  "description": "Scrapes specific Loft Loyalty fields from admin dashboards using intelligent DOM detection.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}